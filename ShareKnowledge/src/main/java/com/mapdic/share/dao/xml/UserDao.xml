<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!--必须与接口同名-->
<mapper namespace="com.mapdic.share.dao.UserDao">
    <resultMap id="UserMap" type="com.mapdic.share.model.User">
        <result property="id" column="id"/>
        <result column="username" property="userName"/>
        <result column="passwd" property="passWd"/>
        <result column="ic" property="IC"/>
        <result column="phone" property="phone"/>
        <result column="qq" property="qq"/>
        <result column="mail" property="mail"/>
        <result column="level" property="level"/>
    </resultMap>
    <sql id="columns">
        id,username,passwd,ic,phone,qq,mail,level
    </sql>
    <select id="getAllUser" resultMap="UserMap">
        SELECT
        <include refid="columns"/>
        FROM USER
    </select>
    <select id="login" resultMap="UserMap">
        SELECT
        <include refid="columns"/>
        FROM USER
        WHERE username=#{userName} AND passwd = #{passWd}
    </select>
    <insert id="addUser" parameterType="com.mapdic.share.model.User">
        INSERT INTO USER
        (username,passwd,ic,phone,qq,mail)
        VALUES
        (#{userName},#{passWd},#{IC},#{phone},#{qq},#{mail})
    </insert>
    <update id="updateUser" parameterType="com.mapdic.share.model.User" >
        UPDATE USER
        <set>
            <if test="userName != null">
                username = #{userName},
            </if>
            <if test="passWd != null">
                passwd = #{passWd},
            </if>
            <if test="IC != null">
                ic = #{IC},
            </if>
            <if test="phone != null">
                phone = #{phone},
            </if>
            <if test="qq != null">
                qq = #{qq},
            </if>
            <if test="mail != null">
                mail = #{mail},
            </if>
        </set>
        <where>id = #{id}</where>
    </update>
    <delete id="deleteUser" parameterType="java.lang.Integer">
        DELETE FROM USER WHERE id = #{id}
    </delete>
</mapper>