<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!--必须与接口同名-->
<mapper namespace="com.mapdic.share.dao.LanguageDao">
    <resultMap id="LanguageMap" type="com.mapdic.share.model.Language">
        <result property="id" column="id"/>
        <result column="name" property="name"/>
    </resultMap>

    <select id="getLanguages" resultMap="LanguageMap">
        SELECT *
        FROM language
    </select>
    <select id="getLanguagesById" resultType="java.lang.String">
        SELECT name
        FROM language
        WHERE id={#id}
    </select>
</mapper>